<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorThemeDark</item>
        <item name="colorAccent">@color/colorTheme</item>
    </style>

    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorThemeDark</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>


    <!--以下为常用文字大小、颜色style-->
    <style name="textBigColor63" >
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/color63</item>
    </style>

    <style name="textBigColor66" >
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/color66</item>
    </style>

    <style name="textBigColor69" >
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/color69</item>
    </style>


    <style name="textBigColorWhite" >
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textNormalColor63" >
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/color63</item>
    </style>

    <style name="textNormalColor66" >
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/color66</item>
    </style>

    <style name="textNormalColor69" >
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/color69</item>
    </style>


    <style name="textNormalColorWhite" >
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textSmallColor63" >
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/color63</item>
    </style>

    <style name="textSmallColor66" >
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/color66</item>
    </style>

    <style name="textSmallColor69" >
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/color69</item>
    </style>


    <style name="textSmallColorWhite" >
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textMiniColor63" >
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:textColor">@color/color63</item>
    </style>

    <style name="textMiniColor66" >
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:textColor">@color/color66</item>
    </style>

    <style name="textMiniColor69" >
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:textColor">@color/color69</item>
    </style>

    <style name="textMiniColorWhite" >
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--end of 常用文字大小、颜色style-->


    <!--分割线-->
    <style name="horizontal_divide_line_2px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/line_gray</item>
    </style>
    <style name="vertical_divide_line_2px">
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
    </style>
    <!--end of 分割线-->
</resources>
